<div class="panel panel-primary">
  <div class="panel-heading"><h4>Registered Application</h4></div>
  <table class="table  table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>URL</th>
        <th>Events</th>
        <th></th>
      </tr>
     </thead>
    <tbody>
      <tr>
        <td><%= @registered_application.name %></td>
        <td><%= @registered_application.url %></td>
        <td><%= @events.count %></td>
        <td><%= link_to "Delete", registered_application_path, class: 'btn btn-sm btn-danger', method: :delete %></td>
      </tr>    
    </tbody>  
  </table>
</div>

<p><%= link_to "Add Application", new_registered_application_path, class: "btn btn-sm btn-success" %></p>

<br>
<br>

<div class="panel panel-primary">
  <div class="panel-heading"><h4>Events</h4></div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.first %></td>
        <td><%= event[1].length %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <div class="panel panel-default">
    <div class="panel-body"><%= pie_chart @registered_application.events.group(:name).count %></div>
    <div class="panel-footer panel-info"><h3 class="text-center">Pie Chart</h3></div>
  </div>
</div>




